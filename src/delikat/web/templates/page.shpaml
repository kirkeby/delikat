html py:strip=""
  py:match path=head once=true
    head
      > link rel=stylesheet type=text/css href=/static/style.css
      | ${select("*")}
  py:match path=body once=true
    body py:attrs=select('@*')
      #top
        .left
          a href=/ | de.li.kat
        .right
          a href=/${user}/ | ${user}
          | logout
      #main
        | ${select("*|text()")}
